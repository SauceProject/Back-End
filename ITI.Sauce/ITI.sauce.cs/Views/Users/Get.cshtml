
@using ITI.Sauce.ViewModels



@model IPagedList<UsersViewModel>


	

	@section StyleSection{
<link rel="stylesheet" href="~/Content/CSS/User.css"/>
<link rel="stylesheet" href="~/Content/CSS/GeneralTable.css"/>
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

	}

     <style>
        
        .page-link{background-color:#143444; color:#F6EE99; }
        .page-link:hover{background-color:#F6EE99; color:#143444 }
        .disabled{color: #143444; margin-right:15px;}
        th{text-align:center; font-size:20px; background-color:#143444; color:#F6EE99;}
        td{text-align:center;}


#btnA {
    width: 7%;
    background-color: blue;
    color: #F6EE99;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    float: right;
}
#btnA:hover {
 
    background-color: green;
    color:#F6EE99;
}
    </style>
<h2 style="margin:10px;">Users</h2>
    <a asp-action="Add" asp-controller="Users" id="btnA">Add</a>

<table>
  <tr>
    <th>NameEn</th>
    <th>NameAr</th>
    <th>Phone</th>
    <th>RegisterDate</th>
    <th>Action</th>


  </tr>
   
   @foreach (var U in Model)
  
{
	<tr>
	
	<td>@U.NameEN</td>
    <td>@U.NameAR</td>
	<td>@U.phone</td>
	<td>@U.registerDate</td>
    <td>
   <a asp-action="Details" asp-controller="Users" asp-route-Id="@U.ID" ><i class="fa-solid fa-eye" style="color:black; font-size:20px;"></i>


 </a>
   |
   <a asp-action="Remove" asp-controller="Vendor" asp-route-Id="@U.ID" > <i class="fa-solid fa-trash" style="color:red; font-size:20px;"></i>

 </a>
   </td>
 </tr>
}
  
</table>
<div>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Search", new { pageIndex = page }),
        new X.PagedList.Web.Common.PagedListRenderOptions
        {
        DisplayItemSliceAndTotal = true,
        ContainerDivClasses = new[] { "navigation" },
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" },
        })
    </div>
    <div>
    <script>
        $(document).ready(function() {
            $('ul.pagination > li.disabled > a').addClass('page-link');
        });
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

</div>




