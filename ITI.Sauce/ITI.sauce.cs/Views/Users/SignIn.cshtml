
@using ITI.Sauce.ViewModels
@model UserLoginViewModel


	@section StyleSection{
<link rel="stylesheet" href="~/Content/CSS/SignIn.css"/>
    }
<meta name="viewport" content="width=device-width, initial-scale=1">



<form asp-action="SignIn" asp-controller="Users" method="post" asp-route-returnUrl="@ViewBag.ReturnUrl">
  <div class="container">
    <h1>Sign In</h1>
    <p>Please fill in this form to Log In an account.</p>
    <hr>
     <div asp-validation-summary="ModelOnly" style="color:red" ></div>


   <label asp-for="Email"> Email</label>
    <input  asp-for="Email">
    <span asp-validation-for="Email" style="color:red"></span>

       <label asp-for="Password"> Password</label>
    <input  asp-for="Password">
    <span asp-validation-for="Password" style="color:red"></span>

        <label asp-for="RemmeberMe"> RemmeberMe</label>
    <input  asp-for="RemmeberMe">
    <span asp-validation-for="RemmeberMe" style="color:red"></span>
    <hr>

    <button id="btnAdd" type="submit" value="SignIn">Sign In</button>
  </div>
  
</form>

