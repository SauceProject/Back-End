<h2 style="margin:10px;">Vendor Table</h2>
<table>
  <tr>
   <th>NameEN</th>
    <th>NameAr</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Restaurants</th>
    <th>Membership</th>
    <th>  Actions  </th>
  </tr>
    @foreach(var V in Model)
{  
  <tr>

     <td>@V.NameEN</td>
    <td>@V.NameAR</td>
    <td>@V.phones</td>
    <td> @V.Email</td>
    <td><a asp-action="Get" asp-controller="Restaurant" asp-route-vendorID="@V.ID" id="Resbtn" >Restaurant</a>
    <td>
        
            @if(!(@V.Vendor_MemberShips ==null))
            {
            <ul style="list-style-type: none;">
            @foreach(var i in @V.Vendor_MemberShips)
            { <li>i</li>
            }
            </ul>
            }
            else
            {
                <p>none</p>
            }

       
    </td>
    <td>
   <a asp-action="Details" asp-controller="Vendor" asp-route-Id="@V.ID" ><i class="fa-solid fa-eye" style="color:black; font-size:20px;"></i>


 </a>
   |
   <a asp-action="Remove" asp-controller="Vendor" asp-route-Id="@V.ID" > <i class="fa-solid fa-trash" style="color:red; font-size:20px;"></i>

 </a>
   </td>
   
  </tr>
    }
</table>
<div>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Search", new { pageIndex = page }),
        new X.PagedList.Web.Common.PagedListRenderOptions
        {
        DisplayItemSliceAndTotal = true,
        ContainerDivClasses = new[] { "navigation" },
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" },
        })

        
    </div>
    <div>
    <script>
        $(document).ready(function() {
            $('ul.pagination > li.disabled > a').addClass('page-link');
        });

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

   
</div>

