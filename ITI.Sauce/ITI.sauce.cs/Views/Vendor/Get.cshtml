@using ITI.Sauce.ViewModels
@model IPagedList<VendorViewModel>

    @section StyleSection{
    <link rel="stylesheet" href="~/Content/CSS/GeneralTable.css"/>
   <link
      rel="stylesheet"
      href="~/Content/lib/font-awesome/css/all.css"
    />
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    }
    <style>
        
        .page-link{background-color:#143444; }
        .page-item{ color: #143444;}
        .disabled{color: #143444; margin-right:15px;}

    </style>

<h2>Vendor Table</h2>
    <a asp-action="Add" asp-controller="Vendor" id="btnAdd">Add</a>
  
    <div class="col-4 p-0 justify-content-end mt-1">
         <form asp-action="Get" asp-controller="Vendor" method="post">
             <span class="btn-group">
                 
        <input  class="form-control" type="text" placeholder="Search..." name="SearchText" value="@ViewBag.SearchText" />
        <input class="p-1 ml-2 btn btn-sm btn-danger" style="border-radius:10px; margin:5px; "  type="submit" value="Search"/>
        </span>

    </form>
    </div>

<table>
  <tr>
   <th>NameEN</th>
    <th>NameAr</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Restaurants</th>
    <th>Membership</th>
    <th>Actions</th>
  </tr>
    @foreach(var V in Model)
{  
  <tr>

     <td>@V.NameEN</td>
    <td>@V.NameAR</td>
    <td>@V.phone</td>
    <td> @V.Email</td>
    <td><a asp-action="Get" asp-controller="Restaurant" asp-route-vendorID="@V.ID">Restaurant</a>
    <td>
        
            @if(!(@V.Vendor_MemberShips ==null))
            {
            <ul style="list-style-type: none;">
            @foreach(var i in @V.Vendor_MemberShips)
            { <li>i</li>
            }
            </ul>
            }
            else
            {
                <p>none</p>
            }

       
    </td>
    <td>
   <a asp-action="Update" asp-controller="Vendor" asp-route-Id="@V.ID"> Update </a>
   |
   <a asp-action="Remove" asp-controller="Vendor" asp-route-Id="@V.ID"> Remove </a>
   </td>
   
  </tr>
    }
</table>
<div>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Get", new { pageIndex = page }),
        new X.PagedList.Web.Common.PagedListRenderOptions
        {
        DisplayItemSliceAndTotal = true,
        ContainerDivClasses = new[] { "navigation" },
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" },
        })

        
    </div>
    <div>
    <script>
        $(document).ready(function() {
            $('ul.pagination > li.disabled > a').addClass('page-link');
        });

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

    </script>
</div>

