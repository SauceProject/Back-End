


@using ITI.Sauce.ViewModels


@model IPagedList<VendorViewModel>

    @section StyleSection{
    <link rel="stylesheet" href="~/Content/CSS/GeneralTable.css"/>
    }

<h2>Vendor Table</h2>
    <a asp-action="Add" asp-controller="Vendor" id="btnAdd">Add</a>
  

<table>
  <tr>
   <th>NameEN</th>
    <th>NameAr</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Actions</th>
  </tr>
    @foreach(var V in Model)
{  
  <tr>

     <td>@V.NameEN</td>
    <td>@V.NameAR</td>
    <td>@V.phone</td>
    <td>@V.ID --- @V.Email</td>
    <td><a asp-action="Search" asp-controller="Restaurant" asp-route-vendorID="@V.ID">Restaurant</a>
    <a asp-action="Get" asp-controller="MemberShip" >MemberShip</a>
    <a asp-action="Get" asp-controller="Ingredient" asp-route-vendorID="@V.ID">Ingredient</a>
   <a asp-action="Update" asp-controller="Vendor" asp-route-Id="@V.ID"> Update </a>
    </td>
  </tr>
    }
</table>
<div>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Search", new { pageIndex = page }),
        new X.PagedList.Web.Common.PagedListRenderOptions
        {
        DisplayItemSliceAndTotal = true,
        ContainerDivClasses = new[] { "navigation" },
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" },
        })
    </div>
    <div>
    <script>
        $(document).ready(function() {
            $('ul.pagination > li.disabled > a').addClass('page-link');
        });
    </script>
</div>

