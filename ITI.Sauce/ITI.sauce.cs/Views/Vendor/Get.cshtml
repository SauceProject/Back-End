

@using ITI.Sauce.ViewModels.Shared
@using ITI.Sauce.ViewModels
@model IPagedList<VendorViewModel>
 <!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/Content/CSS/VendorTable.css"/>
</head>
<body>
<h2>Vendor Table</h2>
<table>
  <tr>
   <th>NameEN</th>
    <th>NameAr</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Actions</th>
  </tr>
    @foreach(var V in Model)
{  
  <tr>
     <td>@V.NameEN</td>
    <td>@V.NameAR</td>
    <td>@V.phone</td>
    <td>@V.ID --- @V.Email</td>
    <td><a asp-action="Get" asp-controller="Restaurant" asp-route-vendorID="@V.ID">Restaurant</a>
    <a asp-action="Get" asp-controller="MemberShip" >MemberShip</a></td>
  </tr>
    }
</table>
<div>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Search", new { pageIndex = page }),
        new X.PagedList.Web.Common.PagedListRenderOptions
        {
        DisplayItemSliceAndTotal = true,
        ContainerDivClasses = new[] { "navigation" },
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" },
        })
    </div>
    <div>
    <script>
        $(document).ready(function() {
            $('ul.pagination > li.disabled > a').addClass('page-link');
        });
    </script>
    <a asp-action="Add" asp-controller="Vendor">Add</a>
</div>
</body>
</html>
