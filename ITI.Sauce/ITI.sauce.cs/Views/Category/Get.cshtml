@using ITI.Sauce.ViewModels


@model  PaginingViewModel<List<CategoryViewModel>>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
<link rel="stylesheet" href="~/Content/CSS/Category.css"/>
</head>
<body>

<h2>Category</h2>

<table>
  <tr>
    <th>ID</th>
    <th>NameEN</th>
    <th>NameAR</th>
    <th>Actions</th>
  </tr>
  <tr>
@foreach (var c in Model.Data)
 {
<td>@c.ID</td>
<td>@c.NameEN</td>
<td>@c.NameAR</td>
 <td><a asp-action="Get" asp-controller="Recipe" asp-route-vendorID="@c.ID">Recipe</a></td>
 }
</tr>


</table>

</body>
</html>