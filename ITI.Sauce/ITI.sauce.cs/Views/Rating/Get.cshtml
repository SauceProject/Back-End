

@using ITI.Sauce.ViewModels


@model IPagedList<RatingViewModel>


 @section StyleSection{
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

}
<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}


        .page-link{background-color:#143444; color:#F6EE99; }
        .page-link:hover{background-color:#F6EE99; color:#143444 }
        .disabled{color: #143444; margin-right:15px;}
        th{text-align:center; font-size:20px; background-color:#143444; color:#F6EE99;}
        td{text-align:center;}


#btnA {
    width: 7%;
    background-color: #143444;
    color: #F6EE99;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    float: right;
}
#btnA:hover {
 
    width: 10%;
    text-align:center;
}

</style>

<body>
<h2 style="margin:10px;">Rating </h2>
    <a asp-action="Add" asp-controller="Rating" id="btnA">Add</a>
<table>
  <tr>

    <th>RatingID</th>
    <th>RatingValue</th>
  </tr>
    @foreach(var V in Model)
{  
  <tr>
    <td>@V.RatingID</td>
    <td>@V.RatingValue</td>
    <td><a asp-action="Update" asp-controller="Rating" asp-route-ID="@V.RatingID">Update</a></td>


  </tr>
    }
</table>
<div>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Search", new { pageIndex = page }),
        new X.PagedList.Web.Common.PagedListRenderOptions
        {
        DisplayItemSliceAndTotal = true,
        ContainerDivClasses = new[] { "navigation" },
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" },
        })
    </div>
    <div>
    <script>
        $(document).ready(function() {
            $('ul.pagination > li.disabled > a').addClass('page-link');
        });
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</div>
</body>


